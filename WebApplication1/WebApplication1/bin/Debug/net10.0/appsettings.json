{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "JwtKey": "ThisIsASuperLongSecretKeyForJWT1234!",
    "ConnectionStrings": {
      "DotNetpractice": "Server=.\\SQLEXPRESS;Database=DotNetPrtc;Trusted_Connection=True;TrustServerCertificate=True;Connection Timeout=60;Max Pool Size=100"
    },
    "IpRateLimiting": {
      "EnableEndpointRateLimiting": true,
      "StackBlockedRequests": false,
      "RealIpHeader": "X-Real-IP",
      "ClientIdHeader": "X-ClientId",
      "HttpStatusCode": 429,
      "GeneralRules": [
        {
          "Endpoint": "*",
          "Period": "1m",
          "Limit": 100
        },
        {
          "Endpoint": "*/api/auth/*",
          "Period": "1m",
          "Limit": 10
        },
        {
          "Endpoint": "*/api/health/*",
          "Period": "1m",
          "Limit": 1000
        }
      ]
    }
}
